        font-size: 1.6em
        font-weight: normal
        margin: 0 -15px 0
        padding: 0 15px .5ex
        text-align: left

      h4
        // .make-row // @REPLACE
        color: $color-gray-d
        font-size: 1.6em
        // font-weight: lighter
        line-height: 1.15
        margin: 0
        padding: 15px

      p,
      ul
        margin-top: 1.5ex
