// mobile site wrapper classes
// use the dev tools emulator to check these, reszing ain't enough
.swipable
  height: 100vh
  max-height: 100vh
  max-width: 100%
  min-width: 100%
  overflow-x: hidden
  position: absolute

  .swipe,
  .swipe-nav
    display: none
    position: absolute

  .swipe
    -webkit-overflow-scrolling: touch
    height: 100%
    max-height: 100%
    overflow-scrolling: touch
    overflow-x: hidden
    overflow-y: scroll
    padding: 0 0 90px 0
    transition: left 0.13s ease-in-out
    width: 100%

    &.previous,
    &.current,
    &.next
      display: block

    &.previous
      left: -100%

    &.current
      left: 0

    &.next
      left: 100%

    .padded
      padding-left: 15px
      padding-right: 15px

  // @REPLACE
  .swipe-nav
    @extends .button-mobile-nav
    bottom: -52px
    z-index: 21

    &.normal,
    &.bounce-in
      display: block

    &.normal
      bottom: 0

    // @REPLACE
    &.bounce-in
      @extends .animated
      @extends .bounceInDown
      top: 0



