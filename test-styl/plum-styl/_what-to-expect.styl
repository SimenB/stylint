    .clock-wrapper
      position: relative
      width: 180px
      margin: 0 auto
      min-height: 190px

    .inset
      position: absolute
      width: 180px
      height: 180px
      margin-top: 10px
      background-color: $color-white
      border-radius: 50%
      box-shadow: 0 0 10px rgba(0,0,0,0.2)

      .lasts
        position: relative
        width: 100px
        font-size: 1.2em
        margin-top: 2.6em
        line-height: 1.1em
        left: 50%
        margin-left: -50px
        text-align: center
        color: $color-gray-m

    .timing
      position: absolute
      width: 100px
      height: 200px
      overflow: hidden
      left: 90px
      transform-origin: left center

    .timing:before
      content: ''
      position: absolute
      width: 100px
      height: 200px
      left: -100px
      border-radius: 100px 0 0 100px
      transform-origin: right center


    // Duration lines
    .timing.kicks-in:before,
    .timing.kicks-in:after
      background-color: #dddddd

    .timing.peak-effect:after,
    .timing.peak-effect:before
      background-color: $color-green-l

    .timing.tapers-off:after,
    .timing.tapers-off:before
      background-color: #858585

