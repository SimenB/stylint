// timelinez
.timeline-section

  .over-time
    box-shadow: 2px 0 2px rgba(0,0,0,.2)
    width: 75%

    .controls
      padding-top: 2em
      padding-bottom: 2em

    .formula-popup, .indication-popup
      // .button-green // @REPLACE
      option
        color: $color-gray-d
        text-shadow: none


    .chart-timeline
      margin-top: 2em

      .timeline-flag
        height: 50px
        vertical-align: bottom

        &.effectiveness
          span
            color: $color-green

        span
          padding-left: 1em
          font-size: $font-small
          background: $color-white
          font-weight: lighter
          color: $color-gray-m
          margin-bottom: 3px

          @media print
            font-size: 12pt
            border-right: 1px solid $color-gray-xxl

          span
            display: inline

          i
            position: absolute
            right: -30px
            top: -8px
            font-size: 54px
            color: $color-white

            @media print
              display: none

      table
        margin-top: 2ex
        border-collapse: separate

      thead
        background: $color-gray-xxxl

      th
        font-size: 1em !important
        font-weight: lighter
        height: 40px
        color: $color-gray-m
        border: 0
        position: relative
        vertical-align: middle
        text-align: center
        padding: 0 1em

        @media print
          font-size: 12pt
          border-right: 1px solid $color-gray-xxl

        span
          display: inline

        i
          position: absolute
          right: -30px
          top: -8px
          font-size: 54px
          color: $color-white

          @media print
            display: none

      table tr:first-child th
        border-top: 0
        border-bottom: 0

      table tr:last-child td
        border-bottom: 0

      table tr td:first-child,
      table tr th:first-child
        border-left: 0

      table tr td:last-child,
      table tr th:last-child
        border-right: 0

      tr
        width: 100%
        height: 2.2em

      td
        //border-bottom: 1px solid rgba(0,0,0,.1)
        border-right: 1px solid rgba(0,0,0,.1)
        color: #525252

        // @media print
        //   font-size: 12pt

      td.start
        position: relative
        padding-left: .3em
        white-space: nowrap
        overflow-x: visible

        span
          position: relative

      .effect-start-semi
        background-color: rgba(133,224,220,.4)
        // .print-border

      span
        display: inline-block
        width: 100%
        padding: .1em 0 .1em .5em

      .effect-start
        background-color: rgba(133,224,220,.4)
        background: linear-gradient(to right,rgba(133,224,220,0) 15%,rgba(133,224,220,1) 100%)
        border-radius: 15px 0 0 15px
        // .print-border

      .effect-middle
        background-color: rgba(133,224,220,1)
        // .print-border

      .effect-end-taper
        background-color: rgba(133,224,220,1)
        background: linear-gradient(to right, rgba(133,224,220,1) 66%,rgba(133,224,220,0) 100%)
        // .print-border

      .sideeffect-start
        background-color: rgba(221,221,221,1)
        border-radius: 15px 0 0 15px
        // .print-border

      .sideeffect-start-taper
        background-color: rgba(221,221,221,1)
        background: linear-gradient(to right, rgba(221,221,221,1) 66%,rgba(221,221,221,0) 100%)
        border-radius: 15px 0 0 15px
        // .print-border

      .sideeffect-end-taper
        background-color: rgba(221,221,221,1)
        background: linear-gradient(to right, rgba(221,221,221,1) 66%,rgba(255,255,255,0) 100%)
        // .print-border

      .sideeffect-middle
        background-color: rgba(221,221,221,1)
        // .print-border

      .bg-selected
        background: $color-yellow-bg

      .sideeffect-row
        cursor: default
        transition: background .2s ease-in-out

        &:hover
          background: none

          td
            .sideeffect-start, .sideeffect-middle, .sideeffect-end
              background-color: rgba(221,221,221,1)
              color: #525252
              // .print-border

            .sideeffect-start-taper
              background-color: rgba(221,221,221,1)
              background: linear-gradient(to right, rgba(221,221,221,1) 66%,rgba(221,221,221,0) 100%)
              color: #525252
              // .print-border

            .sideeffect-end-taper
              background-color: rgba(221,221,221,1)
              background: linear-gradient(to right, rgba(221,221,221,1) 66%,rgba(255,255,255,0) 100%)
              color: #525252
              // .print-border

      .sideeffect-row-clicked,
      .sideeffect-row-clicked.sideeffect-row:hover
        background: none

        td
          .sideeffect-start, .sideeffect-middle, .sideeffect-end
            background-color: rgba(221,221,221,1)
            color: #525252
            text-decoration: none
            // .print-border

          .sideeffect-start-taper
            background-color: rgba(221,221,221,1)
            background: linear-gradient(to right, rgba(221,221,221,1) 66%,rgba(221,221,221,0) 100%)
            color: #525252
            // .print-border

          .sideeffect-end-taper
            background-color: rgba(221,221,221,1)
            background: linear-gradient(to right, rgba(221,221,221,1) 66%,rgba(255,255,255,0) 100%)
            color: #525252
            // .print-border

  @media ( max-width: $screen-xs-max )
    font-size: .7em

  @media ( min-width: $screen-md-min )
    th,
    td
      // .fadeInLeft // @REPLACE

      &:nth-of-type(2)
        // .animated // @REPLACE
        animation-delay: 3s

      &:nth-of-type(3)
        // .animated // @REPLACE
        animation-delay: 4.5s

      &:nth-of-type(4)
        // .animated // @REPLACE
        animation-delay: 6s

      &:nth-of-type(5)
        // .animated // @REPLACE
        animation-delay: 7.5s

  table.layout
    border-collapse: collapse

    td.section
      vertical-align: top
      position: relative

  // Sidebar
  .wte-sidebar
    height: 100%
    width: 25%
    @extends .bg-stripe // @REPLACE

    .wte-data-filter
      background: $color-white
      border-bottom: 1px solid rgba( 0, 0, 0, .3 )
      margin-left: 0px
      padding-bottom: 2em

      .col-sm-4
        padding: 0

      label
        padding-top: .3em
        float: right

      h3
        padding-top: .7em

    .thank-you-message
      padding-top: 4em
      h2
        line-height: 1
        font-size: 1.4em
        color: $color-purple

        .small
          line-height: 0

    label
      color: $color-gray-m
      font-weight: 300

    .reviews-headline
      margin-top: 0

    h3
      font-size: 1.1em !important

    .selected-sideeffect
      color: $color-gold
      margin-left: 1em
      margin-right: 1em

    .wte-survey
      padding-top: 1em

      .btn-group .btn.active
        color: $color-white !important

      .male-female
        margin-right: 1em

      h2
        margin-top: 1em
        margin-bottom: 0
        color: $color-gray-l

      .initial
        text-align: center

        a
