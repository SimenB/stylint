  // Popup
  // Has fixed height which is used in side-effects-stories too,
  // ensuring that the inner carousel content renders at the same vertical
  // position, for a smooth user interface transition from component to component.
  .popup
    margin-top: 4ex
    height: 6ex

    .indication-popup
      .button-green
      option
        color: $color-gray-d
        text-shadow: none

  .navigation-button
    display: block
    text-align: center
